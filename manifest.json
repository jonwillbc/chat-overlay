{
    "name": "Chat Overlay",
    "description": "Overlays a chat onto the page, allowing user to pick a display name and room code and chat with their friends on a server they provide. A server is provided by default, code for which can be found at https://github.com/jonwillbc/chat-overlay-server",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
      },
    "content_scripts": [
      {
        "matches": ["<all_urls>", "https://jwilliams-chatserver.herokuapp.com/"],
        "js": ["socket.io.js","chatBuilder.js", "socketBuilder.js"]
      }
    ],
    "host_permissions": [
      "<all_urls>",
      "https://jwilliams-chatserver.herokuapp.com/"
    ],
    "permissions": ["storage", "declarativeContent", "activeTab", "scripting", "tabs"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
          "16": "/images/chat16.png",
          "32": "/images/chat32.png"
          }
    },
    "icons": {
      "16": "/images/chat16.png",
      "32": "/images/chat32.png",
      "64": "/images/chat64.png",
      "128": "/images/chat128.png"
    }
  }